#include <iostream>
using namespace std;

long long int count(long long int n) {
    int count = 0;

    for (int i = 1; i < n; i++) {
        for (int j = i + 1; j <= n; j++) {
            count++;
        }
    }
    return count;
}

int main() {
    long long int n;
    cin >> n;

    cout << count(n) << endl << '2' << endl;
}
