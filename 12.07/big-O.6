#include <iostream>
using namespace std;

long long int count(long long int n) {
    int count = 0;

    for (int i = 1; i < n - 1; i++) {
        for (int j = i + 1; j < n; j++) {
            for (int k = j + 1; k <= n; k++) {
                count++;
            }
        }
    }
    return count;
}

int main() {
    long long int n;
    cin >> n;

    cout << count(n) << endl << '2' << endl;
}
